{% extends "layout.twig" %}

{% block content %}
  <div class="search-menu row" >
    <div class="col s3 m3 l3 slid">
        <div class="sliders" name="age-picker" id="age-picker"></div>
        <p class="text-center"> Age </p>
    </div>
    <div class="col s3 m3 l3 slid">
      <div class="sliders" name="range-picker" id="range-picker"></div>
      <p class="text-center"> Distance de recherche (km) </p>
    </div>
    <div class="col s3 m3 l3 slid">
        <input type="text" id="range-origin" value="" placeholder="default is your position" name="range-origin">
        <p class="text-center">  Point d'origine </p>
    </div>
    <div class="col s3 m3 l3 slid">

        <div class="sliders" name="range-popularity" id="range-popularity"></div>
        <p class="text-center"> Score </p>
    </div>
  </div>
  <div class="search-menu row">
    <div class="col s4 m4 l4">
      <div class="tag-picker">

        <a id="tag-container-manager" class="waves-effect waves-light btn btn-floating" onclick="Tagchooserdisplay(event)">
          <i class="material-icons">settings</i>
        </a>
        <div class="input-field" id="autotag">
          <i class="material-icons prefix">textsms</i><input type="text" id="autocomplete-input" class="autocomplete"><label for="autocomplete-input">Choisi des tags</label>  </div>
      </div>
            <div id="tag-container">
              <ul>
              </ul>
            </div>
      </div>

    <div class="col s5">
      <div class="col s12">
      <button type="button" name="setFilterAge" class="round" onclick="activefilter('Age')">Filtre Age</button>
      <button type="button" name="setFilterArea" class="round" onclick="activefilter('Area')">Filtre Distance</button>
      </div>
      <div class="col s12">
      <button type="button" name="setFilterPop" class="round" onclick="activefilter('Pop')">Filtre Score</button>
      <button type="button" name="setFilterTag" class="round" onclick="activefilter('Tags')">Filtre Tags</button>
    </div>
    </div>
    <div class="col s3">
      <button type="button" name="StartSearch" class="bigone" onclick="startsearch('new')"><i class="material-icons">search</i></button>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12 l12" id="sort_content_area">
      <div class="col s2 miniProfilPict">
      </div>
      <div class="col s2 m2 l2">
        age
        <button type="button" class="sorter" onclick="sortresult('age',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        km
        <button type="button" class="sorter" onclick="sortresult('distance',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        score
        <button type="button" class="sorter" onclick="sortresult('score',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s3 m3 l3">
        tags
        <button type="button" class="sorter" onclick="sortresult('tags',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
    </div>
    <div class="col s12 m12 l12" id="search_content_area">
    </div>
  </div>
  <script type="text/javascript">
  $(document).ready(function() {
     initsliders();
     document.getElementById('maincontainer').style.overflowY = 'visible';
  });

   </script>
{% endblock %}
